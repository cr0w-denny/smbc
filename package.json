{
  "name": "smbc-next-monorepo",
  "version": "1.0.0",
  "description": "SMBC Monorepo - Next Generation Architecture",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "applets/*/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "generate-mocks": "tsx scripts/mock-generation/cli.ts",
    "create-applet": "tsx scripts/create-applet/cli.ts"
  },
  "overrides": {
    "prismjs": "1.29.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.4",
    "@types/react": "^18.0.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "msw": "^2.10.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "style-dictionary": "^5.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "validate-npm-package-name": "^5.0.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  }
}