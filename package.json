{
  "name": "@smbc/monorepo",
  "version": "1.0.0",
  "description": "SMBC Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "applets/*/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:libs": "npm run build -w packages/*",
    "build:apps": "npm run build -w apps/*",
    "build:applets": "npm run build -w applets/*/*",
    "dev": "concurrently --names=\"TOKENS,CORE,COMPONENTS,HOST,API-CLIENTS,MUI-PACKAGES\" --prefix-colors=\"blue,green,yellow,magenta,cyan,red\" \"npm run dev:tokens\" \"npm run dev:core\" \"npm run dev:components\" \"npm run dev:host\" \"npm run dev:api-clients\" \"npm run dev:mui-packages\"",
    "dev:tokens": "npm run dev -w packages/design-tokens",
    "dev:core": "npm run dev -w packages/mui-applet-core -w packages/shared-query-client",
    "dev:components": "npm run dev -w packages/mui-components -w packages/mui-applet-host",
    "dev:host": "npm run dev -w apps/mui-host-dev",
    "dev:api-clients": "npm run dev -w 'applets/*/api-client'",
    "dev:mui-packages": "npm run dev -w 'applets/*/mui'",
    "dev:simple": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "validate": "npm run type-check && npm run lint && npm run test",
    "generate-mocks": "tsx scripts/mock-generation/cli.ts",
    "create-applet": "tsx scripts/create-applet/cli.ts"
  },
  "overrides": {
    "prismjs": "1.29.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.4",
    "@types/react": "^18.0.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "msw": "^2.10.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "style-dictionary": "^5.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "validate-npm-package-name": "^5.0.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  }
}
