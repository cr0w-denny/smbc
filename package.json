{
  "name": "@smbc/monorepo",
  "version": "0.0.0",
  "description": "SMBC Monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*",
    "apps/*",
    "applets/*/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:apis": "npm run generate:all -w applets/product-catalog/api -w applets/user-management/api && npm run build -w applets/product-catalog/api -w applets/user-management/api",
    "build:apps": "npm run build -w apps/*",
    "build:applet-core": "npm run build -w packages/applet-core -w packages/applet-devtools -w packages/react-query-dataview && npm run build -w packages/mui-applet-core",
    "build:applets": "npm run build -w applets/product-catalog/mui -w applets/user-management/mui",
    "build:changed": "turbo run build --filter=[HEAD^1]",
    "build:libs": "npm run build -w packages/ui-core && npm run build -w packages/mui-components",
    "build:sequential": "npm run build:libs && npm run build:applet-core && npm run build:apis && npm run build:applets && npm run build:apps",
    "build:test-host": "./scripts/build-test-host.sh",
    "clean": "npm run clean --workspaces --if-present",
    "clean-console": "./scripts/clean-console.ts",
    "clean-console:dry": "./scripts/clean-console.ts --dry-run --verbose",
    "clean-ts": "find ./packages ./apps ./applets -path '*/src/*.d.ts' -not -name 'vite-env.d.ts' -delete && find ./packages ./apps ./applets -path '*/src/*.d.ts.map' -delete && find ./packages ./apps ./applets -path '*/src/*.js' -delete",
    "create-applet": "tsx scripts/create-applet/cli.ts",
    "create-host": "node packages/create-host/dist/cli.js",
    "deps:sync": "tsx scripts/deps/manage-deps.ts sync",
    "deps:validate": "tsx scripts/deps/manage-deps.ts validate",
    "deps:list": "tsx scripts/deps/manage-deps.ts list",
    "deps:update": "tsx scripts/deps/manage-deps.ts update",
    "deps:sync-devbar": "tsx scripts/deps/sync-devbar-deps.ts",
    "dev": "npm run dev -w apps/mui-host-dev",
    "dev:all": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "generate": "./scripts/mock-generation/generate.ts",
    "generate:all": "npm run generate:all --workspaces --if-present",
    "generate:api-servers": "tsx scripts/generate-api-servers.ts",
    "lint": "turbo run lint",
    "reboot": "npm run reset && npm install && npm run build",
    "reset": "./scripts/clean-slate.sh",
    "review-changes": "./scripts/review-changes.ts",
    "storybook": "npm run storybook -w @smbc/mui-storybook",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "turbo run type-check",
    "validate": "npm run type-check && npm run lint && npm run test",
    "registry:setup": "./scripts/verdaccio/setup-packages.sh",
    "registry:start": "./scripts/verdaccio/start.sh",
    "registry:use-local": "./scripts/verdaccio/use-local.sh",
    "registry:use-npm": "./scripts/verdaccio/use-npm.sh",
    "registry:publish": "./scripts/verdaccio/publish-local.sh",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "overrides": {
    "prismjs": "1.29.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@faker-js/faker": "^8.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^20.11.17",
    "@types/prompts": "^2.4.4",
    "@types/react": "^18.2.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "msw": "^2.2.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "style-dictionary": "^5.0.0",
    "table": "^6.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "validate-npm-package-name": "^5.0.0",
    "verdaccio": "^6.1.5",
    "vite": "^5.1.3",
    "vitest": "^1.3.0",
    "yaml": "^2.8.0"
  }
}
