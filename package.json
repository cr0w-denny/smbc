{
  "name": "@smbc/monorepo",
  "version": "0.0.1",
  "description": "SMBC Monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*",
    "apps/*",
    "applets/*/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@smbc/ui-core && turbo run build",
    "bundle:analyze": "./scripts/bundle-analyzer/analyze-bundle.ts",
    "bundle:analyze-all": "./scripts/bundle-analyzer/analyze-bundle.ts --all",
    "bundle:report": "./scripts/bundle-analyzer/analyze-bundle.ts --report",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "clean": "npm run clean --workspaces --if-present",
    "clean-console": "./scripts/clean-console.ts",
    "clean-console:dry": "./scripts/clean-console.ts --dry-run --verbose",
    "clean-ts": "find ./packages ./apps ./applets -path '*/src/*.d.ts' -not -name 'vite-env.d.ts' -delete && find ./packages ./apps ./applets -path '*/src/*.d.ts.map' -delete && find ./packages ./apps ./applets -path '*/src/*.js' -delete",
    "create-applet": "node packages/create-applet/index.mjs",
    "deps:sync": "tsx scripts/deps/manage-deps.ts sync",
    "deps:validate": "tsx scripts/deps/manage-deps.ts validate",
    "deps:list": "tsx scripts/deps/manage-deps.ts list",
    "deps:update": "tsx scripts/deps/manage-deps.ts update",
    "deps:peer": "tsx scripts/deps/peer-deps.ts",
    "dev": "npm run dev -w apps/mui-host-dev",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "generate": "npm run generate --workspaces --if-present",
    "lint": "turbo run lint",
    "publish:sonatype": "node scripts/publish-sonatype.js",
    "publish:sonatype:dry-run": "node scripts/publish-sonatype.js --dry-run",
    "reboot": "npm run reset && npm install && npm run build",
    "registry": "./scripts/verdaccio/start.sh --reset",
    "registry:setup": "./scripts/verdaccio/setup-packages.sh",
    "registry:start": "./scripts/verdaccio/start.sh",
    "registry:use-local": "./scripts/verdaccio/use-local.sh",
    "registry:use-npm": "./scripts/verdaccio/use-npm.sh",
    "registry:publish": "./scripts/verdaccio/publish-local.sh",
    "reset": "./scripts/clean-slate.sh",
    "storybook": "npm run storybook -w @smbc/mui-storybook",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "turbo run type-check",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "overrides": {
    "prismjs": "1.29.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@faker-js/faker": "^8.0.0",
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.3.23",
    "@types/validate-npm-package-name": "^4.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^1.6.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "jsdom": "^26.1.0",
    "msw": "^2.2.0",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "style-dictionary": "^5.0.0",
    "table": "^6.9.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "validate-npm-package-name": "^5.0.0",
    "verdaccio": "^6.1.5",
    "vite": "^7.0.4",
    "vitest": "^1.3.0",
    "yaml": "^2.8.0"
  },
  "dependencies": {
    "motion": "^12.23.22"
  }
}
