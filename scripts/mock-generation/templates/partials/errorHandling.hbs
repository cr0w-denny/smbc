{{#if errorScenarios}}
    // Error simulation based on configuration
    // Make errors predictable for demonstration purposes
    const shouldSimulateError = faker.number.float() < mockConfig.errorRate{{#if (eq operationType "update")}} || 
      (requestBody?.name && requestBody.name.toLowerCase().includes('error')){{/if}};
    
    if (shouldSimulateError) {
      {{#if (eq operationType "update")}}
      const itemName = requestBody?.name || existingItem?.name || entityId;
      return HttpResponse.json(
        { error: '{{defaultError.type}}', message: `Failed to update "${itemName}": {{defaultError.message}}` },
        { status: {{defaultError.status}} }
      );
      {{else}}
      return HttpResponse.json(
        { error: '{{defaultError.type}}', message: '{{defaultError.message}}' },
        { status: {{defaultError.status}} }
      );
      {{/if}}
    }
{{/if}}