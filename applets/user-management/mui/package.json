{
  "name": "@smbc/user-management-mui",
  "version": "0.0.0",
  "description": "User management applet for MUI hosts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "smbc-applet",
    "smbc-mui-applet"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "@smbc/applet-core": "*",
    "@smbc/mui-components": "*",
    "@smbc/react-query-dataview": "*"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "msw": "^2.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@smbc/user-management-api": "*"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "http://localhost:4873",
    "access": "public"
  },
  "smbc": {
    "applet": {
      "id": "user-management",
      "name": "User Management",
      "description": "Comprehensive user management with roles and permissions",
      "framework": "mui",
      "icon": "People",
      "path": "/users",
      "permissions": [
        "VIEW_USERS",
        "CREATE_USERS", 
        "EDIT_USERS",
        "DELETE_USERS",
        "MANAGE_ROLES",
        "VIEW_ANALYTICS"
      ],
      "exportName": "userManagementApplet"
    }
  }
}
