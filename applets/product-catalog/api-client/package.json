{
  "name": "@smbc/product-catalog-client",
  "version": "0.0.0",
  "description": "React Query client for product catalog API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks.d.ts",
      "default": "./dist/mocks.js"
    }
  },
  "scripts": {
    "build": "npm run generate:api && tsc",
    "generate:api": "openapi-typescript ../api/tsp-output/@typespec/openapi3/openapi.json -o src/generated/types.ts && npm run generate-mocks",
    "generate-mocks": "../../../scripts/mock-generation/generate.ts --input ../api/tsp-output/@typespec/openapi3/openapi.json --output src/mocks/index.ts --base-url /api/v1",
    "dev": "npm run generate:api && tsc --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist src/generated src/mocks",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "@smbc/applet-query-client": "*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/node": "^20.0.0",
    "openapi-typescript": "^6.7.0",
    "typescript": "^5.8.3",
    "react": "^18.0.0",
    "msw": "^2.0.0"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
