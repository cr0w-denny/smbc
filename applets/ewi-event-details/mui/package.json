{
  "name": "@smbc/ewi-event-details-mui",
  "version": "0.0.1",
  "description": "EWI Event details applet for MUI hosts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "smbc-applet",
    "smbc-mui-applet"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "@smbc/mui-components": "*",
    "@smbc/mui-grid": "*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "@smbc/applet-core": "*",
    "@smbc/mui-components": "*",
    "@smbc/mui-applet-core": "*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@tiptap/core": "^3.3.1",
    "@tiptap/pm": "^3.3.1",
    "@tiptap/react": "^3.3.1",
    "@tiptap/starter-kit": "^3.3.1",
    "@tiptap/extension-placeholder": "^3.3.1",
    "@tiptap/extension-highlight": "^3.3.1",
    "@tiptap/extension-task-list": "^3.3.1",
    "@tiptap/extension-task-item": "^3.3.1",
    "@tiptap/extension-character-count": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@smbc/mui-applet-core": "*",
    "@smbc/applet-core": "*",
    "@smbc/mui-components": "*"
  },
  "files": [
    "dist/**/*"
  ],
  "smbc": {
    "applet": {
      "id": "ewi-event-details",
      "name": "EWI Event Details",
      "description": "Detailed view and editing for EWI events",
      "framework": "mui",
      "icon": "Dashboard",
      "path": "/event-details",
      "permissions": [],
      "exportName": "ewiEventDetailsApplet"
    }
  }
}