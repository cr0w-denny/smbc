{
  "name": "@smbc/vite-config",
  "version": "0.0.1",
  "description": "Shared Vite configuration for SMBC applets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./applet": {
      "types": "./dist/presets/applet.d.ts",
      "import": "./dist/presets/applet.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "rollup-plugin-visualizer": "^5.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "~5.8.3"
  },
  "peerDependencies": {
    "vite": "^7.0.4"
  },
  "publishConfig": {
    "registry": "http://localhost:4873",
    "access": "public"
  }
}
