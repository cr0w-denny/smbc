{
  "name": "@smbc/ui-core",
  "version": "0.0.1",
  "type": "module",
  "description": "Framework-agnostic UI core primitives for SMBC applications (design tokens, types, etc.)",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tokens.css": "./tokens.css"
  },
  "files": [
    "dist",
    "tokens.css"
  ],
  "scripts": {
    "build": "tsc -b && node generate-css.mjs",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "echo 'Lint: ui-core'",
    "type-check": "tsc --noEmit",
    "generate-css": "node generate-css.mjs",
    "watch-css": "chokidar src/tokens.ts -c \"npm run generate-css\""
  },
  "devDependencies": {
    "typescript": "~5.8.3",
    "chokidar-cli": "^3.0.0"
  },
  "publishConfig": {
    "registry": "http://localhost:4873",
    "access": "public"
  }
}