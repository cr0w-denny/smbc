{
  "name": "@smbc/applet-devtools",
  "version": "0.0.0",
  "description": "Development tools and mocks for SMBC applets",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./src/mocks/*": {
      "types": "./dist/mocks/*.d.ts",
      "import": "./dist/mocks/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "echo 'Lint: applet-devtools'",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@smbc/applet-core": "*",
    "@tanstack/react-query": "^5.0.0",
    "msw": "^2.0.0",
    "react": "^18.0.0"
  }
}