{
  "name": "@smbc/markdown-json",
  "version": "0.0.1",
  "description": "Converts markdown files to JSON format for static consumption",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "markdown-json": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "marked": "^14.1.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^20.11.17",
    "typescript": "~5.8.3"
  },
  "publishConfig": {
    "registry": "http://localhost:4873",
    "access": "public"
  }
}
