{
  "name": "@smbc/create-host",
  "version": "0.1.0",
  "description": "Create SMBC applet host applications",
  "type": "module",
  "bin": {
    "create-host": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "cp ../applet-meta/src/index.js src/shared-deps.ts && cp ../applet-meta/src/applet-docs.js src/applet-docs.js && cp -r ../../scripts/deps/template-deps.ts src/template-deps.ts",
    "build": "tsc && cp -r templates dist/",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "smbc",
    "create",
    "host",
    "mui",
    "applet"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "prompts": "^2.4.2",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.17",
    "@types/fs-extra": "^11.0.1",
    "@types/prompts": "^2.4.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://localhost:4873"
  }
}
